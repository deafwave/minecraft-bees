{
    "$schema": "https://raw.githubusercontent.com/MCJack123/TypeScriptToLua/master/tsconfig-schema.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "node",
        "strict": false,
        "typeRoots": ["src/types"],
        "types": ["@jackmacwindows/lua-types/cc",]
    },
    "tstl": {
        "luaTarget": "CC",
        "luaLibImport": "inline",
        "luaBundle": "main.lua",
        "luaBundleEntry": "src/main.ts"
    },
    "include": ["src/**/*.ts"]
}